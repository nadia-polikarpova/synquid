data List a where
	Nil :: List a
	Cons :: x: a -> xs: List a -> List a
  
termination measure len :: List a -> {Int | _v >= 0} where
  Nil -> 0
  Cons x xs -> 1 + len xs  
	
append :: xs: List a -> ys: List a -> {List a | len _v == len xs + len ys}
append = \xs . \ys . 
    match xs with
      Nil -> ys
      Cons x3 x4 -> Cons x3 (append x4
                               ys)

	
